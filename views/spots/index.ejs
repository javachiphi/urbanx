<% layout('layouts/boilerplate') %>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div id="map" class="vh-80 wd-100"></div>
    </div>
    <div class="col-md-6 text-white">
      <div class="overflow-scroll vh-80">
        <div class="row">
          <% for (let spot of spots) {%>
          <div class="col-md-6 mb-3">
            <div class="card h-100">
              <a href="/spots/<%= spot.id %>">
                <img
                  crossorigin="anonymous"
                  class="card-img-top"
                  src="<%= spot.images[0]?.thumbnail %>"
                  alt=""
                />
              </a>
              <div class="card-body">üìç<%= spot.location %></div>
            </div>
          </div>
          <% } %>
        </div>
        <%- include('../partials/pagination', {page, totalPages}) %>
      </div>
    </div>
  </div>
</div>

