<% layout('layouts/Boilerplate') %>
<h1>Edit</h1>
<form action="/spots/<%= spot.id %>?_method=PUT" method="post">
  <input type="hidden" name="_method" value="put" />
  <div>
    <label for="title">Title</label>
    <input
      type="text"
      name="title"
      id="spot[title]"
      value="<%= spot.title %>"
    />
  </div>
  <div>
    <label for="location">Location</label>
    <input
      type="text"
      name="location"
      id="spot[location]"
      value="<%= spot.location %>"
    />
  </div>
  <input type="submit" value="Update Spot" />
</form>
